<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filterrr"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#665499"
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Min Price"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="16sp"
                    android:textColor="#461D8D"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:inputType="number"

                    android:id="@+id/minprice_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/max_min"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="to"
                    android:textColor="#665499"
                    android:fontFamily="@font/nunito"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Max Price"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="16sp"
                    android:textColor="#461D8D"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:inputType="number"
                    android:id="@+id/maxprice_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/max_min"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
       
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_detailpage"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Range"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#665499"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (square feet)"
                android:textSize="16dp"
                android:fontFamily="@font/nunito"
                android:textColor="#665499"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Min Area"
                    android:textColor="#461D8D"
                    android:textSize="16sp" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/minarea_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/max_min"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="to"
                    android:textColor="#665499"
                    android:fontFamily="@font/nunito"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Max Area"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="16sp"
                    android:textColor="#461D8D"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:inputType="number"
                    android:id="@+id/maxarea_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/max_min"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_detailpage"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Living space"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#665499"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <LinearLayout
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beds"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"
                android:drawableLeft="@drawable/bedroom_svg"
                android:drawablePadding="10dp"
                android:textColor="#5A4791"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baths"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"
                android:drawableLeft="@drawable/shower_svg"
                android:drawablePadding="10dp"
                android:textColor="#5A4791"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roommates"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"
                android:drawableLeft="@drawable/bedroom_svg"
                android:drawablePadding="10dp"
                android:textColor="#5A4791"/>






        </LinearLayout>
            <LinearLayout
                android:paddingStart="110dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:inputType="number"
                    android:id="@+id/bedssss_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/filter_edittext"
                    android:padding="4dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/bathssss_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="4dp"

                    android:background="@drawable/filter_edittext"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/matessss_edittext"
                    android:layout_width="wrap_content"
                    android:padding="4dp"

                    android:layout_height="wrap_content"
                    android:background="@drawable/filter_edittext"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>






        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_detailpage"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Furnishing"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#665499"
            />
        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/furnishing_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/furniture"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Furnished"
                    android:textColor="#9747FF"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    />
                <TextView
                    android:id="@+id/notfurnishing_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/furniture"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Not Furnished"
                    android:textColor="#9747FF"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingStart="180dp">
                <RadioGroup
                    android:id="@+id/furnishingggg_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >
                    <RadioButton
                        android:id="@+id/furnishedddd_radiobutton"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"

                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/notfurnished_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>







            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/clear_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear"
                android:textColor="#66539A"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito"/>
            <Button
                android:id="@+id/apply_now_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply filter"
                android:fontFamily="@font/nunito"
                android:textSize="16dp"
                android:background="@drawable/applynow_button_bg"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />



        </LinearLayout>







        







    </LinearLayout>

</ScrollView>