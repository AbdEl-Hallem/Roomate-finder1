<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:textAlignment="center"
        android:id="@+id/imageSlider"
        />

    <com.github.fajaragungpramana.dotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:dotColor="#cccccc"
        app:dotSelectedColor="@color/default_button"
        app:dotSize="20dp"
        app:dotSpacing="6dp" />

    <TextView
        android:id="@+id/full_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Full adress"
        android:textColor="#461D8D"

        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"

        android:gravity="center"
        >

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/measurment_svg"
            android:drawablePadding="4dp"
            android:padding="8dp"
            android:text="Size" />

        <TextView
            android:id="@+id/baths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/shower_svg"
            android:drawablePadding="4dp"
            android:padding="8dp"


            android:text="baths" />

        <TextView
            android:id="@+id/beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/bedroom_svg"
            android:drawablePadding="4dp"
            android:padding="8dp"


            android:text="beds" />

        <TextView
            android:id="@+id/roommates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:drawableStart="@drawable/user_svg"
            android:drawablePadding="4dp"
            android:padding="8dp"


            android:text="Roommates" />



    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" flat Description"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textSize="15sp"
        android:textColor="#461D8D"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/nunito"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras eu semper velit. Nam tempor gravida libero, a gravida odio dapibus at. Donec sagittis neque lacus, vel posuere tortor volutpat et. Nulla ut tempor arcu. Quisque id sapien at augue elementum consequat. Vestibulum ac consequat quam."
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_detailpage"
        android:layout_marginTop="8dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:padding="4dp"
            android:text="Available from : "
            android:textColor="#461D8D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4dp"
            android:text="Price"

            android:textColor="#461D8D"
            android:textSize="16sp" />





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_detailpage"
        android:layout_marginTop="8dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amenties"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#461D8D"
        android:layout_marginTop="8dp"
        android:background="@drawable/amenties_bg"
        android:gravity="center"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/amenties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:drawableStart="@drawable/house"
        android:drawablePadding="8dp"
        android:fontFamily="@font/nunito"
        android:padding="8dp"
        android:text="House"
        android:textColor="#9747FF"
        android:textSize="20sp" />
    <TextView
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:id="@+id/apartment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/apartment"
        android:fontFamily="@font/nunito_semibold"
        android:text="Apartment"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        />
    <TextView

        android:id="@+id/villa_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/villa"
        android:fontFamily="@font/nunito_semibold"
        android:text="Villa"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/other_property_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/other"
        android:fontFamily="@font/nunito_semibold"
        android:text="Other"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/garage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/garage"
        android:fontFamily="@font/nunito_semibold"
        android:text="Garage"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/parking_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/parking"
        android:fontFamily="@font/nunito_semibold"
        android:text="Parking"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/internet_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/internet"
        android:fontFamily="@font/nunito_semibold"
        android:text="Internet"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/balacony_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/balacony"
        android:fontFamily="@font/nunito_semibold"
        android:text="Balcony|Terrace"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/garden_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/garden"
        android:fontFamily="@font/nunito_semibold"
        android:text="Garden|Yard"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/workingout_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/workingout"
        android:fontFamily="@font/nunito_semibold"
        android:text="Workout Facilities"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/security_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/security"
        android:fontFamily="@font/nunito_semibold"
        android:text="Securities"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/pets_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableStart="@drawable/pets"
        android:fontFamily="@font/nunito_semibold"
        android:text="Pets Allowed"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/furnishing_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/furniture"
        android:fontFamily="@font/nunito_semibold"
        android:text="Furnished"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/notfurnishing_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/furniture"
        android:fontFamily="@font/nunito_semibold"
        android:text="Not Furnished"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/washingmachine_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/washingmachine"
        android:fontFamily="@font/nunito_semibold"
        android:text="Washing Machine"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/tv_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/tv"
        android:fontFamily="@font/nunito_semibold"
        android:text="TV Unit"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/airconditioner_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/tv"
        android:fontFamily="@font/nunito_semibold"
        android:text="Air Conditioning"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/otherappliance_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/fridge"

        android:fontFamily="@font/nunito_semibold"
        android:text="Other Appliances"
        android:textColor="#9747FF"
        android:textSize="20sp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="16dp"
        android:padding="8dp"/>







    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_detailpage"
        android:layout_marginTop="8dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/profile_detail"
            android:layout_width="52dp"

            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitStart"
            android:src="@drawable/add_photo_ic" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Name"
                android:textColor="#432C82"


                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flat owner"
                android:textColor="#432C82"
                android:textSize="12sp"
                />
</LinearLayout>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interests_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/intrest_item"
        />



    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/nunito"
        android:textSize="14sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras eu semper velit. Nam tempor gravida libero, a gravida odio dapibus at. Donec sagittis neque lacus, vel posuere tortor volutpat et. Nulla ut tempor arcu. Quisque id sapien at augue elementum consequat. Vestibulum ac consequat quam."/>
    <Button
        android:id="@+id/Register1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:background="@drawable/message_bg"
        android:enabled="true"
        android:fontFamily="@font/nunito"
        android:padding="10dp"
        android:text="Chat with Ahmed"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginStart="32dp"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
</ScrollView>