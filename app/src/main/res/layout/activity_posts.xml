            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/nu_of_baths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nm_of_bedrooms_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:text="Numnber OF baths"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/if_amenities_furnished_included_card" />


        <EditText
            android:id="@+id/edit_text_no_baths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"

            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/nu_of_roommates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nm_of_bedrooms_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:text="Numnber OF rommates"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/if_amenities_furnished_included_card" />


        <EditText
            android:id="@+id/edit_text_no_roommates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"

            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/furnishing_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:text="Size"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/if_amenities_furnished_included_card" />


        <EditText
            android:id="@+id/edit_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="number"
            android:padding="8dp"
            android:selectAllOnFocus="true"

            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/property_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
