            app:layout_constraintTop_toBottomOf="@id/amenities">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/garage_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/garage"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Garage"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/parking_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/parking"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Parking"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/internet_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/internet"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Internet"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/balacony_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/balacony"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Balcony|Terrace"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/garden_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/garden"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Garden|Yard"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/workingout_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/workingout"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Workout Facilities"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/security_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/security"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Securities"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pets_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/pets"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Pets Allowed"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="140dp"
                    android:paddingTop="9dp"


                    >

                    <CheckBox
                        android:id="@+id/garage_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/parking_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/internet_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/balacony_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/garden_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/workingout_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/securities_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/pets_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/furnishing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/furnishing_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="25dp"
            android:paddingTop="7dp"
            android:text="Furnishing"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amenities_card" />

        <androidx.cardview.widget.CardView
            android:id="@+id/furnishing_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F7EFFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/furnishing">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/furnishing_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/furniture"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Furnished"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/notfurnishing_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/furniture"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Not Furnished"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="180dp">

                    <RadioGroup
                        android:id="@+id/furnishing_radiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/furnished_radiobutton"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"

                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <RadioButton
                            android:id="@+id/notfurnished_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:button="@drawable/checkbox"
                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/if_amenities_furnished_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/if_amenities_furnished_included"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="25dp"
            android:paddingTop="7dp"
            android:text="If amenities furnished included"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/furnishing_card" />

        <androidx.cardview.widget.CardView
            android:id="@+id/if_amenities_furnished_included_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F7EFFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/furnishing">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/washingmachine_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/washingmachine"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Washing Machine"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/tv"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="TV Unit"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/airconditioner_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/tv"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Air Conditioning"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/otherappliance_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/fridge"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Other Appliances"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:paddingStart="151dp">

                    <CheckBox
                        android:id="@+id/washingmachine_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/tv_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/airconditioner_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <CheckBox
                        android:id="@+id/other_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/checkbox"
                        android:textColor="#9747FF"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nu_of_bedrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nm_of_bedrooms_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:text="Numnber OF Bed Rooms"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/if_amenities_furnished_included_card" />


        <EditText
            android:id="@+id/edit_text_no_beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="number"
            android:padding="8dp"
