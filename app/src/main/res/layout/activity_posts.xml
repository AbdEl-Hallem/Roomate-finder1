<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="postss">

    <LinearLayout
        android:id="@+id/linearLayout_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="posts"
        android:orientation="vertical"
        tools:context=".posts">


        <ImageView
            android:id="@+id/fiil_the_description"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/top_img" />

        <TextView


            android:id="@+id/property_type"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="@drawable/property_type"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:text="Property type"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fiil_the_description"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F7EFFE">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/ph_house_line_bold"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="House"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/apartment_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/apartment"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Apartment"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/villa_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/villa"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Villa"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/other_amenities_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/other"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Other"
                        android:textColor="#9747FF"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="205dp">

                    <RadioGroup
                        android:id="@+id/property_type_radiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/house_radiobutton"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"

                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <RadioButton
                            android:id="@+id/apartment_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:button="@drawable/checkbox"
                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <RadioButton
                            android:id="@+id/villa_radiobutton"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"

                            android:button="@drawable/checkbox"
                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <RadioButton
                            android:id="@+id/other_amenities_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:button="@drawable/checkbox"
                            android:textColor="#9747FF"
                            android:textSize="20sp"
                            tools:ignore="TouchTargetSizeCheck" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/amenities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/amenities_background"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="25dp"
            android:paddingTop="7dp"
            android:text="Amenities"
            android:textColor="#461D8D"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/property_type_card" />

        <androidx.cardview.widget.CardView
