<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settingss"
        android:layout_gravity="center_horizontal"
        />
    <androidx.cardview.widget.CardView

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F4FE"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textColor="#4E3789"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_detailpage"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal info"
            android:textSize="16sp"
            android:textColor="#B064F4"
            android:fontFamily="@font/nunito"
            android:drawableRight="@drawable/chevron_left"

            />
            <TextView
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="16sp"
                android:textColor="#B064F4"
                android:fontFamily="@font/nunito"
                android:drawableRight="@drawable/chevron_left"

                />
            <TextView
                android:id="@+id/save"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textSize="16sp"
                android:textColor="#B064F4"
                android:fontFamily="@font/nunito"
                android:drawableRight="@drawable/chevron_left"
                android:layout_marginBottom="25dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F4FE"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#4E3789"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_detailpage"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />

            <Switch
                android:id="@+id/generalnotification_switchbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito"
                android:text="General Notifications"
                android:textColor="#B064F4"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Switch
                android:id="@+id/msgnotification_switchbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/nunito"
                android:text="Messages Notifications"
                android:textColor="#B064F4"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F4FE"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="#4E3789"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_detailpage"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textSize="16sp"
                android:textColor="#B064F4"
                android:fontFamily="@font/nunito"
                android:drawableRight="@drawable/chevron_left"

                />
            <TextView
                android:id="@+id/rateing"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate us"
                android:textSize="16sp"
                android:textColor="#B064F4"
                android:fontFamily="@font/nunito"
                android:drawableRight="@drawable/chevron_left"

                />
            <TextView
                android:id="@+id/logout"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textSize="16sp"
                android:textColor="#B064F4"
                android:fontFamily="@font/nunito"
                android:drawableRight="@drawable/chevron_left"
                android:layout_marginBottom="25dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
















</LinearLayout>
</ScrollView>