<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_photo"
            android:layout_width="204dp"
            android:layout_height="202dp"
            android:background="@drawable/round_img"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Fill Your Information"
            android:textAllCaps="false"
            android:textColor="#461D8D"
            android:textSize="24sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            />

        <EditText
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:id="@+id/edit_text_first_name_fill_information"
            android:padding="8dp"

            />

        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edit_text_last_name_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="16dp"/>
            />

        <EditText
            android:id="@+id/edit_text_gender_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:padding="8dp"
            android:selectAllOnFocus="true"

            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="16dp"
          />

        <EditText
            android:id="@+id/edit_text_phone_number_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:selectAllOnFocus="true"
            android:padding="8dp"
            android:inputType="phone"

            />

        <TextView
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth date"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edit_text_birth_date_fill_information"

            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="date"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="21px"
            android:padding="8dp"
            android:text="National ID"
            android:textColor="#CC461D8D"
            android:textSize="16sp" />

        <EditText
            android:padding="8dp"
            android:id="@+id/edit_text_national_id_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:inputType="numberSigned"
            android:background="@drawable/rectangle_profile_activity"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Choose your Interests"
            android:textAllCaps="false"
            android:textColor="#461D8D"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/interests_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/intrest_item"
            android:layout_marginTop="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_upload_profiledata"
            android:layout_width="341dp"
            android:layout_height="63dp"
            android:text="Continue"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:background="@drawable/pink_button"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            />

    </LinearLayout>
</ScrollView>