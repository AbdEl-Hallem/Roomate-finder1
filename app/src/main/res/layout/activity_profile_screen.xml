<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageButton
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:src="@drawable/add_photo_ic"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Fill Your Information"
            android:textAllCaps="false"
            android:textColor="#461D8D"
            android:textSize="24sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            />

        <EditText
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:id="@+id/edit_text_first_name_fill_information"
            android:selectAllOnFocus="true"
            android:padding="8dp"

            />

        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edit_text_last_name_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="16dp"/>
            />

        <EditText
            android:id="@+id/edit_text_gender_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:padding="8dp"
            android:selectAllOnFocus="true"

            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:textSize="16sp"

            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="16dp"
          />

        <EditText
            android:id="@+id/edit_text_birth_date_fill_information"
            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:selectAllOnFocus="true"
            android:padding="8dp"
            android:inputType="phone"

            />

        <TextView
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#CC461D8D"
            android:lineHeight="21px"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth date"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edit_text_national_id_fill_information"

            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_profile_activity"
            android:inputType="date"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="21px"
            android:padding="8dp"
            android:text="National ID"
            android:textColor="#CC461D8D"
            android:textSize="16sp" />

        <EditText
            android:padding="8dp"

            android:layout_width="341dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:inputType="numberSigned"
            android:background="@drawable/rectangle_profile_activity"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Choose your Interests"
            android:textAllCaps="false"
            android:textColor="#461D8D"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="21dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_sportss_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sport_interest_fill"

                    />

                <Button
                    android:id="@+id/button_skating_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_skating_interest_fill" />

                <Button
                    android:id="@+id/button_foodie_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_foodie_interest_fill" />



                <Button
                    android:id="@+id/button_cleaning_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_cleaning_interest_fill" />

                <Button
                    android:id="@+id/button_learning_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_learning_interest_fill" />

                <Button
                    android:id="@+id/button_it_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_it_interest_fill" />

                <Button
                    android:id="@+id/button_nightsout_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_nightsout_interest_fill" />

                <Button
                    android:id="@+id/button_culture_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_culture_interest_fill" />

                <Button
                    android:id="@+id/button_gardening_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_gardening_interest_fill" />

                <Button
                    android:id="@+id/button_photography_interest_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/button_photogoraphy_interest_fill" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="23dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_music_interest_fill"
                    android:id="@+id/button_music_interest_fill"


                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_cooking_interest_fill"
                    android:id="@+id/button_cooking_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_vegan_interest_fill"
                    android:id="@+id/button_vegan_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_planting_interest_fill"
                    android:id="@+id/button_planting_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_football_interest_fill"
                    android:id="@+id/button_football_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_chilling_interest_fill"
                    android:id="@+id/button_chilling_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_charity_interest_fill"
                    android:id="@+id/button_charity_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_stayhome_interest_fill"
                    android:id="@+id/button_stayhome_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_art_interest_fill"
                    android:id="@+id/button_art_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_workingout_interest_fill"
                    android:id="@+id/button_workingout_interest_fill"
                    android:layout_marginTop="9dp"

                    />





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_marginTop="21dp"
                android:layout_marginHorizontal="23dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_fun_interest_fill"
                    android:id="@+id/button_fun_interest_fill"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_party_interest_fill"
                    android:id="@+id/button_party_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_gamer_interest_fill"
                    android:id="@+id/button_gamer_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_petlover_interest_fill"
                    android:id="@+id/button_petlover_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shopping_interest_fill"
                    android:id="@+id/button_shopping_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_reading_interest_fill"
                    android:id="@+id/button_reading_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_social_interest_fill"
                    android:id="@+id/button_social_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_memes_interest_fill"
                    android:id="@+id/button_meme_interest_fill"
                    android:layout_marginTop="9dp"

                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_climate_interest_fill"
                    android:id="@+id/button_climate_interest_fill"
                    android:layout_marginTop="9dp"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_faith_interest_fill"
                    android:id="@+id/button_faith_interest_fill"
                    android:layout_marginTop="9dp"

                    />




            </LinearLayout>


        </LinearLayout>
        <Button
            android:layout_width="341dp"
            android:layout_height="63dp"
            android:text="Continue"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:background="@drawable/pink_button"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            />


    </LinearLayout>
</ScrollView>