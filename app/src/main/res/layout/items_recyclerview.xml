        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"

            >
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:drawableStart="@drawable/measurment_svg"
                android:drawablePadding="4dp"
                android:padding="6dp"

                />
            <TextView
                android:id="@+id/baths"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="baths"
                android:drawableStart="@drawable/shower_svg"
                android:drawablePadding="4dp"
                android:layout_marginLeft="2dp"
                android:padding="6dp"

                />
            <TextView
                android:id="@+id/beds"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beds"
                android:drawableStart="@drawable/bedroom_svg"
                android:drawablePadding="4dp"
                android:layout_marginLeft="2dp"
                android:padding="6dp"


                />
            <TextView
                android:id="@+id/no_of_roommates"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roommates"
                android:drawableStart="@drawable/user_svg"
                android:drawablePadding="4dp"
                android:layout_marginLeft="2dp"
                android:padding="6dp"



                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
    <TextView
        android:id="@+id/full_adress"
        android:fontFamily="@font/nunito_bold"
        android:textSize="20sp"
        android:padding="6dp"
android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/locationn"
        android:text="Full adress"
        android:drawablePadding="2dp"
        android:layout_marginStart="8dp"
        android:textColor="#432C82"
        />
        <ImageButton
            android:id="@+id/fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.8"
            android:background="@android:color/transparent"
            android:src="@drawable/favourtire_unfilled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#432C82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:id="@+id/area"
                android:layout_marginStart="20dp"
                android:text="City"
                android:drawableStart="@drawable/city_building_1"
                android:drawablePadding="4dp"

                />



        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:weightSum="3"
    android:layout_marginStart="6dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Message"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/messgae_svg"
        android:drawablePadding="4dp"


        />
    <TextView
        android:id="@+id/price"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"


        android:text="Price"
        android:textSize="16sp"
        android:layout_marginTop="11dp"/>


</LinearLayout>
    </LinearLayout>
